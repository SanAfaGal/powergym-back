# =============================================================================
# PowerGym Backend - Environment Variables Example
# =============================================================================
# This is a template file. Copy it to .env or .env.{environment} and fill in
# the actual values. NEVER commit .env files with real values to the repository.
#
# Usage:
#   Development: cp .env.example .env.development
#   Production:  cp .env.example .env.production
# =============================================================================

# =============================================================================
# APP CONFIGURATION
# =============================================================================
PROJECT_NAME=PowerGym API
VERSION=1.0.0
API_V1_STR=/api/v1
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# SECURITY - REQUIRED: Generate strong random keys for production!
# =============================================================================
# Generate SECRET_KEY: openssl rand -hex 32
# Generate BIOMETRIC_ENCRYPTION_KEY: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=300
REFRESH_TOKEN_EXPIRE_HOURS=12
BIOMETRIC_ENCRYPTION_KEY=your-biometric-encryption-key-here-generate-with-openssl-rand-hex-32

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# For Docker: use 'postgres' as hostname (service name)
# For local: use 'localhost' or '127.0.0.1'
DATABASE_URL=postgresql://user:password@postgres:5432/powergym

# Individual PostgreSQL settings (optional, used if DATABASE_URL not provided)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=powergym
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# SUPER ADMIN - REQUIRED: Change these values!
# =============================================================================
# These credentials are used to create the initial admin user on first startup
SUPER_ADMIN_USERNAME=admin
SUPER_ADMIN_PASSWORD=change-this-password
SUPER_ADMIN_EMAIL=admin@powergym.com
SUPER_ADMIN_FULL_NAME=Super Admin

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for CORS
# Development: http://localhost:5173,http://localhost:3000
# Production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS_STR=http://localhost:5173

# =============================================================================
# FACE RECOGNITION - InsightFace
# =============================================================================
# Embedding dimensions (512 for InsightFace models)
EMBEDDING_DIMENSIONS=512

# InsightFace model: buffalo_s (small, faster), buffalo_l (large, more accurate), buffalo_sc
INSIGHTFACE_MODEL=buffalo_s
INSIGHTFACE_DET_SIZE=640
# Context ID: -1 for CPU, 0+ for GPU (if available)
INSIGHTFACE_CTX_ID=-1

# Face recognition tolerance (0.0-1.0)
# Lower = more strict (fewer false positives, more false negatives)
# Higher = more lenient (more false positives, fewer false negatives)
# Recommended: 0.4-0.6
FACE_RECOGNITION_TOLERANCE=0.6

# =============================================================================
# IMAGE PROCESSING
# =============================================================================
# Maximum image size in MB
MAX_IMAGE_SIZE_MB=5

# Allowed image formats (comma-separated)
ALLOWED_IMAGE_FORMATS_STR=jpg,jpeg,png,webp

# Image compression quality (1-100, higher = better quality but larger file)
IMAGE_COMPRESSION_QUALITY=85
THUMBNAIL_COMPRESSION_QUALITY=70

# Thumbnail dimensions in pixels
THUMBNAIL_WIDTH=150
THUMBNAIL_HEIGHT=150

# Embedding compression level (0-9, higher = better compression but slower)
EMBEDDING_COMPRESSION_LEVEL=9

# Enable image compression
ENABLE_COMPRESSION=true

# =============================================================================
# RATE LIMITING
# =============================================================================
# Enable rate limiting
RATE_LIMIT_ENABLED=true
# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# TELEGRAM NOTIFICATIONS (Optional)
# =============================================================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Get chat ID by messaging your bot and visiting: https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID=
# Enable/disable Telegram notifications
TELEGRAM_ENABLED=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# API port (default: 8000)
API_PORT=8000

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# Adminer port (default: 8080) - Development only, remove in production
ADMINER_PORT=8080

# Timezone (default: UTC)
TZ=UTC
